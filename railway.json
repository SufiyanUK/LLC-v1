{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "python init_railway_db.py && uvicorn api_v2:app --host 0.0.0.0 --port $PORT",
    "restartPolicyType": "NEVER",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 30
  }
}